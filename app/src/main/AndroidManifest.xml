        <activity android:name=".IlanBilgileriActivity" />
        <activity android:name=".IlanlarimActivity" />
        <activity android:name=".IlanlarActivity" />
        <activity android:name=".IlanDetayActivity" />
        <activity android:name=".BilgiActivity" />
        <activity android:name=".ChatActivity" />
        <activity android:name=".MesajlarActivity"></activity>
    </application>

</manifest>